<?xml version='1.0' standalone='no'?>
<!DOCTYPE svg PUBLIC '-//W3C//DTD SVG 1.1//EN' 'http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd'>
<svg width='<%= @options[:img_width] %>' height='<%= @options[:img_height] %>' version='1.1' xmlns='http://www.w3.org/2000/svg'>

<% y = 0 %>
<% @lines.each do |l| %>
   <text x='0' y='<%= y %>em' style='font-family:monospace' xml:space='preserve'><%= CGI::escapeHTML l %></text>
<%    y += 1 %>
<% end %>
</svg>
